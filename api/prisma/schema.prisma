// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  PARTICIPANT
}

enum EventStatus {
  DRAFT
  PUBLISHED
  CANCELED
}

enum ReservationStatus {
  PENDING
  CONFIRMED
  REFUSED
  CANCELED
}

model User {
  id               String        @id @default(cuid())
  email            String        @unique
  password         String
  role             Role          @default(PARTICIPANT)
  firstName        String
  lastName         String
  isEmailVerified  Boolean       @default(false)
  avatarUrl        String?
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt
  
  // Relations
  reservations     Reservation[]
  events           Event[]       // Events managed by admin users
  
  @@map("users")
}

model Event {
  id               String        @id @default(cuid())
  title            String
  description      String
  dateTime         DateTime
  location         String
  maxCapacity      Int
  remainingPlaces  Int
  price            Float?
  categoryId       String?
  status           EventStatus   @default(DRAFT)
  imageUrl         String?
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt
  
  // Relations
  category         Category?     @relation(fields: [categoryId], references: [id])
  managerId        String
  manager          User          @relation(fields: [managerId], references: [id])
  reservations     Reservation[]
  
  @@map("events")
}

model Category {
  id          String   @id @default(cuid())
  name        String   @unique
  description String

  // Relations
  events      Event[]

  @@map("categories")
}

model Reservation {
  id          String            @id @default(cuid())
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt
  status      ReservationStatus @default(PENDING)
  ticketUrl   String?
  ticketKey   String?
  
  // Relations
  userId      String
  user        User              @relation(fields: [userId], references: [id])
  eventId     String
  event       Event             @relation(fields: [eventId], references: [id])
  
  @@unique([userId, eventId]) 
  @@map("reservations")
}
